	"layer": "top",
	"height": 32,
	"position": "top",
	"margin-bottom": 0,
	"margin-top": 4,

	// Left modules
	"modules-left": [
		"custom/arch",
		"cpu",
		"memory",
		"hyprland/submap",
		"hyprland/workspaces"
	],

	// Middle modules
	"modules-center": [
